<% include ../partials/header %>

<!-- form for collecting new pets  -->
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/pets" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="What's the animals name?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="type" placeholder="Type of animal?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Please provide URl image of the animal">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description of the animal">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Where are you located?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="site" placeholder="How to contact? Provide FB URL or Website Site">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/pets">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

