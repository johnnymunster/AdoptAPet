<!DOCTYPE html>
<html>
    <head>
        <title>Adopt A Pet</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
            aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/">Adopt A Pet</a>
    
        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <!-- start of contact and about section -->
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/pets">Pets<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/about">About<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/contact">Contact<span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <!-- end of contact and about section -->
            <!-- start of login and register (pushed right) -->
            <ul class="navbar-nav ml-auto ">
                <% if(!currentUser){ %>
                <li class="nav-item active">
                    <a class="nav-link" href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i> Login
                        <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/register"> <i class="fa fa-user-plus" aria-hidden="true"></i>
                        Register <span class="sr-only">(current)</span></a>
                    <% } else { %>
                </li>
                <li>
                    <a href="">Signed in as <%=currentUser.username %></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/logout"> <i class="fa fa-sign-out" aria-hidden="true"></i> Logout
                        <span class="sr-only">(current)</span></a>
                </li>
                
                <% } %>
            </ul>
            <!-- end of login and register -->
        </div>
    </nav> <!-- nav bar ends -->
        <!-- Will display error and success messages -->
        <div class="container">
            <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
            <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
        </div>